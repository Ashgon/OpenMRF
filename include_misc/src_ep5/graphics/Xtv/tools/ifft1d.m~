function out=ifft1d(in,dim,zf);
if nargin == 3
    a = ones(1,ndims(in));
    a(1,dim) = zf;
    tmp1 = matresize(in,round(size(in).*a./2)*2);
else
    
    
    tmp1 = in;
end

clear in

tmp2 = fftshift(tmp1,dim); clear tmp1
tmp3 = ifft(tmp2,[],dim); clear tmp2
tmp4 = fftshift(tmp3,dim); clear tmp3
out = tmp4; clear tmp4

